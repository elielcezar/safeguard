generator client {
  provider = "prisma-client-js"  
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())  
  name          String  
  email         String    @unique
  password      String
  role          String    @default("user")  
  createdAt     DateTime? @default(now())  
  updatedAt     DateTime? @default(now())    
}

model Pass {
  id            Int       @id @default(autoincrement())
  client        String?
  service       String?
  username      String?
  password      String?
  extra         String?
  createdAt     DateTime? @default(now())  
  updatedAt     DateTime? @default(now())    
}